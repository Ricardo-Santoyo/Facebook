<h1>Log In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="sign-in-container">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "email-field" %>

    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "password-field" %>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Log in", id: "log-in-button" %>

    <%= render "devise/shared/links" %>
  </div>
<% end %>