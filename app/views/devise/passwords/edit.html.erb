<h1>Change your password</h1>

<div id="flex-container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div id="sign-in-container">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, placeholder: "New password (6 characters minimum)", autofocus: true, autocomplete: "new-password", class: "password-field"  %>
      
      <%= f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "new-password", class: "password-field"  %>

      <%= f.submit "Change my password", id: "log-in-button"%>

      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
