<h1>All Users</h1>

<ul id="users"
  <% @users.each do |user| %>
    <li class="user">
      <%= link_to user.name, user_path(user) %>
      <% if @received_friend_requests.include?(user) %>
      <% else %>
        <% unless current_user.friends.include?(user) || @sent_friend_requests.include?(user) %>
          <%= button_to "Send Friend Request", {:controller => "friendrequests", :action => "create", :sender_id => current_user.id, :receiver_id => user.id}, :method=>:post %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>