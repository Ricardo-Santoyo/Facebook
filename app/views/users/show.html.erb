<h1><%= @user.name %></h1>

<h2>Posts</h2>
<ul id="posts">
  <% @user.posts.each do |post| %>
    <li class="post">
      <%= post.body %>
    </li>
  <% end %>
</ul><br />

<h2>Friends</h2>
<ul id="friends">
  <% @user.friends.each do |friend| %>
    <li class="friend">
      <%= link_to friend.name, user_path(friend) %>
    </li>
  <% end %>
</ul>